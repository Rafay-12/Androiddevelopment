<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.view.MainActivity">

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autofillHints="Corolla"
            android:inputType="text"
            android:minHeight="48dp"
            android:hint="Enter Car Name"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/companyName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:autofillHints="Toyota"
            android:inputType="text"
            android:minHeight="48dp"
            android:hint="Enter Company Name"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/type"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:minHeight="48dp"
            android:autofillHints="Sedan"
            android:hint = "Enter type"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/model"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:autofillHints="2010"
            android:inputType="number"
            android:minHeight="48dp"
            android:hint="Enter Model"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/form"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp">

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/searchByModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Search by Model"
            android:layout_marginStart="5dp"/>

        <Button
            android:id="@+id/displayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display"
            android:textSize="17sp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>